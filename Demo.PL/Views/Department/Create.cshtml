@model CreatedDepartmentDto


<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Department</h1>

    <form class="col-8" method="post" asp-controller="Department" asp-action="Create">
        

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group mb-3">
            @* <label class="form-label" for="Code"></label> *@
            @* <input id="Code" name="Code" type="text" /> *@
            <label class="form-label" asp-for="code"></label>
            <input asp-for="code" class="form-control" />
            <span asp-validation-for="code" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="name"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="description"></label>
            <textarea class="form-control" asp-for="description"></textarea>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="DateOfCreation"></label>
            <input type="date" asp-for="DateOfCreation" class="form-control" />
        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="btn btn-outline-dark" asp-controller="Department" >Back to list</a>
        </div>
    </form>
</div>