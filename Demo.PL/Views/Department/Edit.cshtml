@using Demo.PL.ViewModels.DepartmentViewModels
@model DepartmentEditViewModel
<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Department</h1>
    <form method="post" asp-controller="Department" asp-action="Edit" class="col-8">
        <div class="form-group mb-3">
            <label class="form-label" asp-for="code"></label>
            <input asp-for="code" class="form-control" />
            <span asp-validation-for="code" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="name"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="description"></label>
            <textarea class="form-control" asp-for="description"></textarea>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="DateOfCreation"></label>
            <input asp-for="DateOfCreation" class="form-control" />
        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Edit" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>