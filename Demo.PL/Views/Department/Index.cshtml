@model IEnumerable<Demo.BLL.DtOs.DepartmentDTO>

<h1>All Departments </h1>
<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create"> create new department </a>
<br/>
@if ((Model?.Any())?? false)
{
    <table class="table table-striped table-hover">

        <thead>
            <tr>
              <th>@Html.DisplayNameFor(d=>d.code) </th>
              <th>@Html.DisplayNameFor(d=>d.Name) </th>
              <th>@Html.DisplayNameFor(d=>d.Description) </th>
              <th>@Html.DisplayNameFor(d=>d.DateOFCreation) </th>
              <th>Details</th>
              <th>Update</th>
              <th>Delete</th>
            
            </tr>

        </thead>
        <tbody> 
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.code</td>
                    <td>@department.Name</td>
                    <td>@department.Description</td>
                    <td>@department.DateOFCreation</td>
                    <td> <a class="btn btn-info" asp-action="Details" asp-route-id="@department.deptId"> <i class="fas fa-eye"> </i>  Details</a></td>
                    <td> <a class="btn btn-warning" asp-action="Edit" asp-route-id="@department.deptId"> <i class="fas fa-edit"> </i>  Edit</a></td>
                    <td> <a class="btn btn-danger" asp-action="Delete" asp-route-id="@department.deptId"> <i class="fas fa-trash"> </i>  Delete</a></td>

                </tr>    
            }
        </tbody>
    </table>
}
else
{
    
 <div class="alert alert-info mt-2"> 

     <h2>No Department found !!</h2>
 </div>
}